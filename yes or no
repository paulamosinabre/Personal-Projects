import java.util.Random;
import java.util.Scanner;

public class YesOrNo {
    static String user1;
    
    public static void main(String[] args) {
        getUserAndRandom();
    }
    
    public static void getUserAndRandom() {
        Scanner user = new Scanner(System.in);
        Random yesOrNo = new Random();
        
            System.out.println("Enter any yes or no question: ");
            user1 = user.nextLine();

            System.out.println("");
            String result = yesOrNo.nextBoolean() ? "YES": "NO";

            System.out.println(result);
        }
           
}
