import java.util.Scanner;
public class HelloWorld {
    String day;
    
    public HelloWorld(String day) {
        day = this.day;
}    
    public static void main(String[] args) {
       Scanner myDay = new Scanner(System.in);
       System.out.println("This program allows you to give you activities based on the day given. \n Make sure to capitalize first letter!");
       
       int i = 0;
       while (i <= 3){
           System.out.println("Enter a day: ");
            String day = myDay.nextLine();
            break;
            
            switch (day) {
           case "Monday":
               System.out.println("Go to a new cafe");
            break;
            case "Tuesday":
               System.out.println("Go to a new cafe");
            break;
            case "Wednesday":
                System.out.println("Watch a movie with your loved ones");
            break;
            case "Thursday":
                System.out.println("Go shopping");
            break;
            case "Friday":
                System.out.println("Join meditation community");
            break;
            case "Saturday":
                System.out.println("Workout");
            break;
            case "Sunday":
                System.out.println("Do household chores");
            break;
            default: 
                System.out.println("Stay at home");
            }
       }    
       
    }
}
